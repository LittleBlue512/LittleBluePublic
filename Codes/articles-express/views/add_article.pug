extends layout

block content
    h1 #{title}
    form(action="/articles/add" method="POST")
        #form-group
            label Title :
            input.form-control(type="text" name="title")
        #form-group
            label Author :
            input.form-control(type="text" name="author")
        #form-group
            label Content :
            textarea.form-control(name="content")
        br
        input.btn.btn-primary(type="submit" value="Submit")